<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro" name="ffw_lg2_leader">
  <xacro:arg name="use_sim" default="false" />
  <xacro:arg name="use_fake_hardware" default="false" />
  <xacro:arg name="fake_sensor_commands" default="false" />
  <xacro:arg name="prefix" default="" />

  <xacro:include filename="$(find ffw_description)/urdf/leader/ffw_leader_body.urdf.xacro" />

  <xacro:include filename="$(find ffw_description)/ros2_control/ffw_lg2_leader/ffw_lg2_leader_left_system.ros2_control.xacro" />

  <xacro:include filename="$(find ffw_description)/ros2_control/ffw_lg2_leader/ffw_lg2_leader_right_system.ros2_control.xacro" />

  <link name="world"/>

  <xacro:ffw_leader_body parent="world" prefix="${prefix}">
    <origin xyz="0 0 0" rpy="0 0 0" />
  </xacro:ffw_leader_body>

  <joint name="${prefix}gripper_l_joint" type="revolute">
    <origin xyz="0 0 0" rpy="0 0 0"/>
    <parent link="${prefix}arm_l_link7"/>
    <axis xyz="0 1 0"/>
    <child link="${prefix}gripper_l_link"/>
  </joint>
  <link name="${prefix}gripper_l_link"/>

  <joint name="${prefix}gripper_r_joint" type="revolute">
    <origin xyz="0 0 0" rpy="0 0 0"/>
    <parent link="${prefix}arm_r_link7"/>
    <axis xyz="0 1 0"/>
    <child link="${prefix}gripper_r_link"/>
  </joint>
  <link name="${prefix}gripper_r_link"/>

  <xacro:ffw_lg2_leader_left_system
      use_sim="$(arg use_sim)"
      use_fake_hardware="$(arg use_fake_hardware)"
      fake_sensor_commands="$(arg fake_sensor_commands)" />

  <xacro:ffw_lg2_leader_right_system
      use_sim="$(arg use_sim)"
      use_fake_hardware="$(arg use_fake_hardware)"
      fake_sensor_commands="$(arg fake_sensor_commands)" />

</robot>
